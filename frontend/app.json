{
  "expo": {
    "name": "El Tomb de Reus",
    "slug": "eltombdereus",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo-tomb.png",
    "scheme": "eltombdereus",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/logo-tomb.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "cat.reus.reusapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-tomb.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "package": "cat.reus.eltombdereus",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo-tomb.png",
      "name": "El Tomb de Reus",
      "shortName": "El Tomb",
      "lang": "ca",
      "scope": "/",
      "startUrl": "/",
      "backgroundColor": "#e87308",
      "themeColor": "#e87308",
      "display": "standalone",
      "orientation": "portrait",
      "preferRelatedApplications": false,
      "description": "Aplicació oficial d'El Tomb de Reus - Descobreix establiments, ofertes, esdeveniments i més!",
      "dir": "auto",
      "icons": [
        {
          "src": "/icons/icon-72x72.png",
          "sizes": "72x72",
          "type": "image/png"
        },
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        },
        {
          "src": "/icons/icon-128x128.png",
          "sizes": "128x128",
          "type": "image/png"
        },
        {
          "src": "/icons/icon-144x144.png",
          "sizes": "144x144",
          "type": "image/png"
        },
        {
          "src": "/icons/icon-152x152.png",
          "sizes": "152x152",
          "type": "image/png"
        },
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "/icons/icon-384x384.png",
          "sizes": "384x384",
          "type": "image/png"
        },
        {
          "src": "/icons/icon-512x512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#D84315"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permet a El Tomb de Reus usar la teva ubicació per mostrar-te establiments propers."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permet a El Tomb de Reus accedir a la càmera per escanejar codis QR de tickets."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
