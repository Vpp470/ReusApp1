# Cache Control per evitar caché agressiu

# Desactivar caché per HTML i JS
<FilesMatch "\.(html|htm|js)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Permetre caché per imatges i CSS (més estàtics)
<FilesMatch "\.(css|jpg|jpeg|png|gif|ico|svg)$">
    Header set Cache-Control "public, max-age=86400"
</FilesMatch>

# Forçar revalidació per JSON
<FilesMatch "\.(json)$">
    Header set Cache-Control "no-cache, must-revalidate, max-age=0"
</FilesMatch>

# Habilitar compressió GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Configurar CORS si és necessari
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>
